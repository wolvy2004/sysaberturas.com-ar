---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot name="header" />
    <slot name="home" />
    <slot name="productos" />
    <slot name="empresa" />
  </body>
  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap");
    :root {
      --var-primary-color: #57275d;
      --var-secondary-color: #ce7727;
      --var-accent-color: #a6a6a6;
      --var-text-color: #646464;
      --var-bg-color: #fff;
    }
    * {
      font-family: "Inter", Arial, Helvetica, sans-serif;
      padding: 0;
      margin: 0;
      box-sizing: content-box;
    }

    section {
      z-index: -1;

      h1 {
        font-size: 3em;
        margin-bottom: 0.7em;
        text-transform: uppercase;
      }
      p {
        line-height: 1.5em;
        font-size: 1.2em;
      }
    }
  </style>
</html>
