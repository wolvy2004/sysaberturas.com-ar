---
let imagenes = [
  { id: 1, nombre: "imgs/img(1).jpg" },
  { id: 2, nombre: "imgs/img(2).jpg" },
  { id: 3, nombre: "imgs/img(3).jpg" },
  { id: 4, nombre: "imgs/img(4).jpg" },
  { id: 5, nombre: "imgs/img(5).jpg" },
  { id: 6, nombre: "imgs/img(6).jpg" },
  { id: 7, nombre: "imgs/img(7).jpg" },
  { id: 8, nombre: "imgs/img(8).jpg" },
];
---

<section id="galeria">
  <h1 class="saira-condensed-medium">Galer√≠a de imagenes</h1>
  <div class="galeria_wrapper">
    {imagenes.map((m) => <img src={m.nombre} />)}
  </div>
</section>

<style>
  #galeria {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

    background-color: var(--var-primary-color);
  }
  #galeria h1 {
    margin-top: 1em;
    text-align: center;
    font-size: 4em;
  }
  .galeria_wrapper {
    margin: 2em;
    width: 100%;
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(auto-fit, minmax(150px, 400px));
    gap: 10px;
  }
  img {
    width: 600px;
    height: 300px;
    object-fit: cover;
    filter: grayscale(1) opacity(0.5);
    transition: 0.2s ease-in;
  }
  img:hover {
    filter: grayscale(0);
  }
  @media screen and (max-width: 480px) {
    #galeria h1 {
      font-size: 3em;
      margin-top: 2em;
    }

    img {
      width: 400px;
      height: 100px;
      object-fit: cover;
    }
  }
</style>
