---
let imagenes = [
  { id: 1, nombre: "imgs/img(1).jpg" },
  { id: 2, nombre: "imgs/img(2).jpg" },
  { id: 3, nombre: "imgs/img(3).jpg" },
  { id: 4, nombre: "imgs/img(4).jpg" },
  { id: 5, nombre: "imgs/img(5).jpg" },
  { id: 6, nombre: "imgs/img(6).jpg" },
  { id: 7, nombre: "imgs/img(7).jpg" },
  { id: 8, nombre: "imgs/img(8).jpg" },
];
---

<section id="galeria">
  <h1 class="saira-condensed-medium">Galeria de imagenes</h1>
  <div class="galeria_wrapper">
    {imagenes.map((m) => <img src={m.nombre} />)}
  </div>
</section>

<style>
  #galeria {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    max-height: calc(100% + 100px);
    background-color: var(--var-primary-color);
    h1 {
      text-align: center;
      padding: 0.5em 0;
      font-size: 4em;
    }
  }
  .galeria_wrapper {
    width: 80%;
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(auto-fit, minmax(200px, 600px));
    gap: 10px;
    img {
      width: 600px;
      height: 300px;
      object-fit: cover;
      filter: grayscale(1) opacity(0.5);
      transition: 0.2s ease-in;
    }
    img:hover {
      filter: grayscale(0);
    }
  }
  @media screen and (max-width: 768px) {
    #galeria h1 {
      font-size: 3em;
    }
  }
</style>
