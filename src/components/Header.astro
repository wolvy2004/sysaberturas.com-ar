---
interface links {
  link: string;
  name: string;
}
let links: Array<links> = [
  {
    link: "#",
    name: "home",
  },
  {
    link: "#productos",
    name: "Nuestros productos",
  },
  {
    link: "#empresa",
    name: "Nuestra Empresa",
  },
  {
    link: "#contacto",
    name: "contacto",
  },
  {
    link: "#presupuesto",
    name: "Presupuesto",
  },
];
---

<header id="header" class="header">
  <picture>
    <img src="imgs/logo.svg" alt="" />
  </picture>
  <nav>
    <ul>
      <img src="imgs/logo_long.svg" alt="" />
      {links.map((link) => <a href={link.link}>{link.name}</a>)}
    </ul>
  </nav>
</header>

<style>
  #header {
    z-index: 10;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 210px;
    width: 100%;
    background: linear-gradient(to bottom, white, 85%, rgb(126, 124, 124));
    transition: 0.5s ease-in-out;
    picture img {
      margin-bottom: 30px;
      width: 450px;
      height: 140px;
      transition: 0.75s ease-in;
    }

    nav {
      display: flex;

      justify-content: center;
      align-items: center;
      position: absolute;
      left: 0;
      bottom: 0;
      height: 40px;
      width: 100%;
      background: var(--var-primary-color);
      box-shadow: 0px 0px 25px rgba(1, 1, 1, 0.2);
      transition: 0.5s ease-out;

      ul {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.5s;
        img {
          height: 35px;
          transform: translateY(-50px);
          transition: 0.75s ease-in;
          margin-right: 1em;
          opacity: 0;
          display: none;
        }
        a {
          z-index: 3;
          position: relative;
          padding: 0px 15px;
          line-height: 40px;
          font-size: 14px;
          text-transform: uppercase;
          text-decoration: none;
          color: white;
          transition: 0.3s ease-in;
          &:hover {
            background-color: var(--var-secondary-color);
            color: white;
          }

          &::before {
            z-index: 1;
            content: "";
            position: absolute;
            bottom: 10px;
            left: 50%;
            border-left: 10px solid var(--var-secondary-color);
            border-right: 10px solid transparent;
            border-top: 10px solid transparent;
            border-bottom: 10px solid var(--var-secondary-color);
            transform: rotate(-45deg) translateX(-50%);
            opacity: 0;
            transition: 0.2s ease-in;
          }
          &:hover::before {
            opacity: 1;
            bottom: 0;
          }
        }
      }
    }
  }
  #header.scrollear {
    height: 55px;
    img {
      transform: translateY(-150px);
    }
    nav {
      height: 100%;
    }
    nav ul img {
      position: relative;
      display: block;
      transform: translateY(0px);
      opacity: 1;
      display: block;
    }
    ul {
    }
  }
</style>
