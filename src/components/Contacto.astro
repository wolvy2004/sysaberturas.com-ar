---
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";
---

<section id="contacto">
  <article>
    <aside class="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d634.8258096988765!2d-63.005326532907475!3d-40.811322848665775!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2sar!4v1710539384545!5m2!1ses-419!2sar"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen="True"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </aside>
    <main class="content-wrapper">
      <h1 class=" saira-condensed-medium title">Contacto</h1>
      <form action="">
        <div class="content-input">
          <input
            type="text"
            placeholder="nombre y apellido"
            id="name"
            placeholder=" "
            required
          />
          <label for="name"> Nombre y apellido </label>
          <Icon name="mdi:account" />
          <div class="content-input">
            <input type="text" name="email" id="email" placeholder=" " required />
            <label for="email">Correo Electronico</label>
            <Icon name="mdi:email" />
          </div>
          <div class="content-input">
            <input
              type="text"
              name="subject"
              id="subject"
              placeholder=" "
              required
            />
            <label for="subject">Asunto</label>
            <Icon name="mdi:text-subject" />
          </div>
          <div class="content-input">
            <textarea name="contenido" id="" cols="30" rows="20" placeholder=" "
            ></textarea>
            <label for="contenido">Mensaje</label>
            <Icon name="mdi:pencil" />
          </div>
        </div>
        <div class="button">
          <Button text="Enviar Consulta" link="#contacto" />
        </div>
      </form>
    </main>
  </article>
  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    section {
      padding: 2em;
      width: 100%;
      height: 100vh;
      color: var(--var-text-color);
      background-color: var(--var-orange100);
    }
    article{
      margin: 0 auto;
      display: flex;
      width: 80%;
      justify-content: center;
      align-items: center;
    
      
     
    }
    .content-wrapper {
      width: 100%;
      background-color: var(--var-bg-color);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 15px;
      box-shadow: 0 0 25px rgba(99, 62, 5, 0.5);
      z-index: 10;
    }
    aside {
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      width: 100%;
    }
   

    .button{
      display: flex;
      justify-content: center;
    }
    form {
      width: 90%;
      margin-top: 20px;
    }
   

    .content-input {
      position: relative;
    }
    .content-input svg {
      color: var(--var-orange200);
      position: absolute;
      top: 24px;
      left: 20px;
      font-size: 1em;
    }
    input,
    textarea {
      margin: 15px;
      z-index: 1;
      outline: none;
      width: 90%;
      padding: 5px 5px 5px 30px;
      border-bottom: 2px solid var(--var-grey100);
      transition: 0.5s ease;
      border-radius: 5px;
    }
    textarea {
      height: 100px;
    }
    label {
      font-size: 0.9em;
      width: 100%;
      color: var(--var-grey200);
      z-index: 10;
      position: absolute;
      top: 20px;
      left: 50px;
      transition: 0.5s ease;
    }
    .button {
      text-align: right;
    }
    input::placeholder {
      color: transparent;
    }

    input:focus,
    textarea:focus {
      border-color: var(--var-orange200);
     
    }
    input:focus + label,
    textarea:focus + label,
    input:not(:placeholder-shown) ~ label,
    textarea:not(:placeholder-shown) ~ label {
      top: -5px;
      left: 15px;
      font-size: 12px;
      color: var(--var-orange200);
    }
    .title{
      color: var(--var-bg-color);
      margin-top: 0px;
      padding: 5px;
      font-size: 3em;
      background-color: var(--var-orange200);
      width: 100%;
      text-align: center;
    }
    
  
  
    @media screen and (max-width: 640px) {
      section {
        display: inline-block;
        width: 100%;
       
        height:fit-content;
      }
      article{
        width: 100%;
        border-radius: 10px;
      }
      .title{
        height: 100px;
        font-size: 3em;
        padding: 0.2em;
      }
      .map{
        display:none
      }
    }
  </style>
</section>
