---
import Layout from "../layouts/Layout.astro";
import Products from "../components/Products.astro";
import Header from "../components/Header.astro";
import Empresa from "../components/Empresa.astro";
import Home from "../components/Home.astro";
import Contact from "../components/Contacto.astro";
import Presupuesto from "../components/Presupuesto.astro";
import Whatsapp from "../components/Whatsapp.astro";
---

<Layout title="Bienvenidos a SyS Aberturas." />
<Whatsapp slot="whatsapp" />
<Header slot="header" />

<Home slot="home" />
<Products slot="productos" />
<Empresa slot="empresa" />
<Contact slot="contacto" />
<Presupuesto slot="presupuesto" />

<script>
  var header = document.getElementById("header");
  window.addEventListener("scroll", () => {
    header?.classList.toggle("scrollear", window.scrollY > 0);
  });
  var headertop = document.getElementById("header.scrollear");
  var headerHeight = headertop?.offsetHeight;
  console.log(headertop);
  document.documentElement.style.setProperty(
    "--scroll-padding",
    headerHeight + "px"
  );
</script>
<style>
  html {
    scroll-behavior: smooth;
    scroll-padding: var(--scroll-padding);
    height: 100vh;
    background-color: rgb(23, 34, 44);
    color: aliceblue;
  }
  section {
    margin: 0 auto;
  }
  h1 {
    font-size: 4em;
  }
  p {
    font-size: 1.2em;
    line-height: 2em;
  }
</style>
